{
    "name": "npub/gos",
    "type": "library",
    "description": "SNILS validation and formatting class for PHP.",
    "keywords": ["СНИЛС", "SNILS", "PHP", "Doctrine", "PHP", "Doctrine DBAL", "Doctrine ORM", "Entity", "EntityType"],
    "homepage": "https://github.com/npub/gos",
    "license": "MIT",
    "authors": [
        {"name": "Alexander Vasilyev", "email": "av@zbox.ru"}
    ],
    "require": {
        "php": "^8"
    },
    "require-dev": {
        "doctrine/coding-standard": "^9.0",
        "doctrine/orm": "^2.10",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^0.12.99",
        "phpstan/phpstan-strict-rules": "^0.12.11",
        "phpunit/phpunit": "^9",
        "psalm/plugin-phpunit": "0.16.1",
        "symfony/error-handler": "^5.0",
        "vimeo/psalm": "4.11.2"
    },
    "suggest": {
        "doctrine/orm": "For using objects as Entity field type."
    },
    "autoload": {
        "psr-4": { "Npub\\Gos\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "Npub\\Gos\\Tests\\": "tests" }
    },
    "extra": {
        "extra": {
            "phpstan": {
                "includes": [
                    "extension.neon"
                ]
            }
        }
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpstan",
            "@phpcs",
            "@psalm"
        ],
        "phpunit": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan",
        "phpcs": "vendor/bin/phpcs",
        "psalm": "vendor/bin/psalm --shepherd"
    },
    "config": {
        "sort-packages": true
    }
}
